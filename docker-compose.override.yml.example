# Optional: Enable Xdebug for local debugging
#
# To use this file:
# 1. Copy it to docker-compose.override.yml:
#    cp docker-compose.override.yml.example docker-compose.override.yml
#
# 2. Rebuild containers with Xdebug enabled:
#    docker-compose down
#    docker-compose build --build-arg INSTALL_XDEBUG=true
#    docker-compose up -d
#
# 3. Configure your IDE to listen on port 9009
#
# Note: docker-compose.override.yml is gitignored, so this won't affect other developers

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        INSTALL_XDEBUG: "true"
    ports:
      - "9009:9009"
    extra_hosts:
      - "host.docker.internal:host-gateway"
    environment:
      - XDEBUG_MODE=debug
      - XDEBUG_CONFIG=client_host=host.docker.internal
